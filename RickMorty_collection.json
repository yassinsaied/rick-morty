        {
          "name": "Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.environment.set(\"user_token\", \"\");",
                  "    pm.environment.set(\"admin_token\", \"\");",
                  "    pm.environment.set(\"user_id\", \"\");",
                  "    console.log(\"Tokens cleared from environment\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
